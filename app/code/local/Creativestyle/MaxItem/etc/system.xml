<?xml version="1.0"?>
<config>
	  <sections>
		<cataloginventory  translate="label" module="maxitem">
					<groups>
				      <cs_maximum_item translate="label">
					  <label>Creativestyle Maximum Item</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>100</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
				       	<enable_max translate="label">
                            <label>Enable Maximum Product/Item Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Select 'Yes', if you want to enable Maxiumum Product/Item extension</comment>
                          </enable_max>
                          <max_product_qty translate="label">
                            <label>Maximum Product in Cart</label>
							<frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Enter maximum items allowed in product cart (products)</comment>
                          </max_product_qty>
                          <max_item_qty translate="label">
                            <label>Maximum Items in Cart</label>
							<frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Enter maximum QTY of products in cart.</comment>
                          </max_item_qty>
					   </fields>
					   </cs_maximum_item>
					</groups>
		</cataloginventory>
	  </sections>
</config>
